{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://github.com/Fork-n-Play/rpgit/blob/master/settings_schema.json",
  "title": "Settings",
  "description": "Json settings for rpgit",

  "definitions": {

    "units": {
      "type": "array",
      "title": "Units",
      "description": "Units of measurement",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "physical quantity",
        "properties": {
          "quantity": {
            "type": "string",
            "enum": [
              "length",
              "weight",
              "temperature",
              "time"
            ],
          "required": ["length", "weight", "temperature", "time"]
          },
          "name": {
            "type": "string"
          },
          "formula": {
            "description": "Formula or multiplier respect SI base units",
            "anyOf": [
              { "type": "string" },
              { "type": "number" }
            ]
          }
        },
        "default": [
          {
            "quantity": "length",
            "name": "metre",
            "formula": 1
          },
          {
            "quantity": "weight",
            "name": "pound",
            "formula": 0.453592
          },
          {
            "quantity": "temperature",
            "name":  "fahrenheit",
            "formula": "(x * (9/5)) - 459.67"
          },
          {
            "quantity": "time",
            "name": "nanocentury",
            "formula": 3.15
          }
        ]
      }
    },

    "roll": {
      "type": "object",
      "description": "base dice roll",
      "properties": {
        "dices": {
          "description": "Number of dices in a roll",
          "type": "integer",
          "minimum": 1
        },
        "sides": {
          "description": "Sides of each dice",
          "type": "array",
          "title": "Sides",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "symbol": {
                "type": "string"
              },
              "value": {
                "type": "number"
              }
            },
            "required": [ "symbol", "value" ],
            "additionalProperties":false
          }
        }
      },
      "required": ["dices", "sides"],
      "default": { "dices": 3, "sides": [
        { "symbol": "1", "value": 1 },
        { "symbol": "2", "value": 2 },
        { "symbol": "3", "value": 3 },
        { "symbol": "4", "value": 4 },
        { "symbol": "5", "value": 5 },
        { "symbol": "6", "value": 6 }
        ]
      }
    },

    "attributes": {
      "type": "object",
      "description": "Basic attribute",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": [ "name", "description" ]
    }

  },

  "type": "object",
  "properties": {
    "units": { "$ref": "#/definitions/units" },
    "roll": { "$ref": "#/definitions/roll" },
    "attributes": { "$ref": "#/definitions/attributes" }
  },
  "required": [ "roll", "units", "attributes" ]
}
