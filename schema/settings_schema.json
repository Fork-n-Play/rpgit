{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://github.com/Fork-n-Play/rpgit/blob/master/schema/settings_schema.json",
  "title": "Settings",
  "description": "Json settings for rpgit",

  "definitions": {

    "system": {
      "type": "object",
      "properties": {
        "units": { "$ref": "#/definitions/units" },
        "rolls": { "$ref": "#/definitions/rolls" }
      },
      "required": [ "units", "rolls" ]
    },

    "units": {
      "type": "array",
      "title": "Units",
      "description": "Units of measurement",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "physical quantity",
        "properties": {
          "quantity": {
            "type": "string",
            "enum": [
              "length",
              "weight",
              "temperature",
              "time"
            ],
            "required": ["length", "weight", "temperature", "time"]
          },
          "title": {
            "type": "string"
          },
          "formula": {
            "description": "Formula or multiplier respect SI base units",
            "anyOf": [
              { "type": "string" },
              { "type": "number" }
            ]
          }
        }
      },
      "default": [
        {
          "quantity": "length",
          "title": "metre",
          "formula": 1
        },
        {
          "quantity": "weight",
          "title": "pound",
          "formula": 0.453592
        },
        {
          "quantity": "temperature",
          "title":  "fahrenheit",
          "formula": "(x * (9/5)) - 459.67"
        },
        {
          "quantity": "time",
          "title": "nanocentury",
          "formula": 3.15
        }
      ]
    },

    "rolls": {
      "type": "array",
      "title": "Rolls",
      "description": "base dice rolls",
      "uniqueItems": true,
      "items": { "$ref": "#/definitions/roll" }
    },

    "roll": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the roll"
        },
        "dices": {
          "title": "Dices",
          "description": "Number of dices in a roll",
          "type": "integer",
          "minimum": 1
        },
        "sides": {
          "type": "array",
          "title": "Sides",
          "description": "Sides of each dice",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "properties": {
              "symbol": {
                "type": "string"
              },
              "value": {
                "type": "number"
              }
            },
            "required": [ "symbol", "value" ],
            "additionalProperties":false
          }
        }
      },
      "required": [ "title", "dices", "sides" ],
      "default": {
        "title": "3d6",
        "dices": 3,
        "sides": [
          { "symbol": "1", "value": 1 },
          { "symbol": "2", "value": 2 },
          { "symbol": "3", "value": 3 },
          { "symbol": "4", "value": 4 },
          { "symbol": "5", "value": 5 },
          { "symbol": "6", "value": 6 }
        ]
      }
    },

    "range": {
      "type": "object",
      "description": "Maximum and minimum values of the range",
      "properties": {
        "maximum": {
          "type": "number"
        },
        "minimum": {
          "type": "number"
        }
      },
      "maxProperties": 2,
      "minProperties": 1
    },

    "cost": {
      "type": "object",
      "description": "Cost is: value - base * increment",
      "properties": {
        "base": {
          "type": "number"
        },
        "multiplier": {
          "type": "number"
        },
        "range": {
          "$ref": "#/definitions/range"
        }
      },
      "required": [ "base", "multiplier", "range" ],
      "default": {
        "base": 10,
        "multiplier": 10,
        "range": {
          "maximum": 13,
          "minimum": 9
        }
      }
    },

    "character": {
      "type": "object",
      "properties": {
        "gauge": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Type of the gauge",
              "enum": [
                "attribute",
                "skill",
                "trait",
                "time"
              ]
            },
            "title": {
              "type": "string",
              "description": "Title of the gauge"
            },
            "description": {
              "type": "string",
              "description": "Description of the gauge"
            },
            "generation": {
                "oneOf": [
                  { "$ref": "#/definitions/roll" },
                  { "$ref": "#/definitions/cost" }
                ]
            }
          },
          "required": [ "type", "title", "description", "generation" ]
        }
      }
    }
  },

  "type": "object",
  "properties": {
    "system": { "$ref": "#/definitions/system" },
    "character": { "$ref": "#/definitions/character" }
  },
  "required": [ "system", "character" ]
}
